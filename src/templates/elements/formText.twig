{% set htmlPropertyName = name|lower|replace({' ': '-'}) %}
{% set old = old[name] %}


<div class="input-field mb-3 {% if errors[name] is defined %} error {% endif %} {{ 'input-' ~ htmlPropertyName }}">
  <input 
    placeholder=" "
    type="{{ type ?? 'text' }}" 
    {# placeholder="{{ name|capitalize }}"  #}
    aria-label="{{ name|capitalize }}" 
    name="{{ htmlPropertyName }}"
    id="{{ 'form-' ~ htmlPropertyName }}"
    {% if old is defined %}
      value="{{ old }}"
    {% endif %}
    {% if required %}
      required
    {% endif %}
  >
  <label for="{{ 'form-' ~ htmlPropertyName }}">{{ name|capitalize ~ other ~ ':' }}</label>
</div>

{% if errors[name] is defined %}
  <div class="mb-3">
    <strong class="text-danger">{{ errors[name] }}</strong>
  </div>
{% endif %}
