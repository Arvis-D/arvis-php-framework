<div class="form-group mb-3">
  <label for="{{ 'form-' ~ name|lower }}">{{ name|capitalize ~ ':' }}</label>
  <input 
    type="{{ type ?? 'text' }}" 
    class="form-control {% if errors[name] is defined %} border border-danger {% endif %}"
    {# placeholder="{{ name|capitalize }}"  #}
    aria-label="{{ name|capitalize }}" 
    name="{{ name|lower|replace({' ': '-'}) }}"
    id="{{ 'form-' ~ name|lower }}"
  >
</div>

{% if errors[name] is defined %}
    <div class="mb-3">
      <strong class="text-danger">{{ errors[name] }}</strong>
    </div>
{% endif %}
