{% extends "master.twig" %}

{% block title %}Rate products | Sign Up{% endblock %}

{% block content %}
    {% include "elements/navbar.twig" with {currentPath: '/signup'} %}

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-md-8 col-lg-5 p-3">
        <div class="p-3 bg-white shadow-sm border rounded">
          <form action="/auth/signup" method="post">
            {% include "elements/formText.twig" with {name: 'username'} %}
            {% include "elements/formText.twig" with {name: 'email'} %}
            {% include "elements/formText.twig" with {name: 'password', type: 'password'} %}
            {% include "elements/formText.twig" with {name: 'repeat password', type: 'password'} %}
            {% include "elements/formCheckBox.twig" with {name: 'Remember me'} %}
            {% include "elements/csrfToken.twig" %}
            <button disabled class="btn btn-primary w-100 submit">Sign Up</button>
          </form>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

{% block scripts %}
  <script src="/dist/addProduct~signup.bundle.js"></script>
  <script src="/dist/signup.bundle.js"></script>
{% endblock %}