{% extends "master.twig" %}

{% block content %}
    {% include "elements/navbar.twig" with {currentPath: '/signup'} %}

  <div class="container mt-5">
    <div class="row justify-content-md-center">
      <div class="col-md-6">
        <div class="p-3 border">
          <h3 class="mb-3 text-center">Sign Up</h3>
          <form action="/auth/signup" method="post">
            {% include "elements/formTextElement.twig" with {name: 'username'} %}
            {% include "elements/formTextElement.twig" with {name: 'email'} %}
            {% include "elements/formTextElement.twig" with {name: 'password', type: 'password'} %}
            {% include "elements/formTextElement.twig" with {name: 'repeat password', type: 'password'} %}
            {% include "elements/csrfToken.twig" %}
            <button class="btn btn-primary w-100">Sign Up</button>
          </form>
        </div>
      </div>
    </div>
  </div>


{% endblock %}